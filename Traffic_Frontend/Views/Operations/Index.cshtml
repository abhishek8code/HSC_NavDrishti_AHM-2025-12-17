@{
    ViewData["Title"] = "Operations Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mapToken = ViewBag.MapboxAccessToken as string ?? string.Empty;
    var backendUrl = ViewBag.BackendApiUrl as string ?? "http://localhost:8002";
}

<link href="https://api.mapbox.com/mapbox-gl-js/v3.0.0/mapbox-gl.css" rel="stylesheet" />
<link href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-draw/v1.5.0/mapbox-gl-draw.css" rel="stylesheet" />

<div class="container-fluid p-3 p-md-4">
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-map"></i> Operations Center</h2>
            <p class="text-muted mb-0">Unified view for traffic, routes, construction and evidence</p>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <button class="btn btn-outline-secondary btn-sm" id="refreshMapBtn"><i class="bi bi-arrow-clockwise"></i> Refresh</button>
            <a class="btn btn-primary btn-sm" href="/Home/Dashboard"><i class="bi bi-graph-up"></i> Analytics</a>
            <a class="btn btn-outline-primary btn-sm" href="/Projects"><i class="bi bi-folder"></i> Projects</a>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <div class="nav nav-pills mb-3" id="modeTabs" role="tablist">
                        <button class="nav-link active" data-mode="traffic" type="button"><i class="bi bi-stoplights"></i> Traffic</button>
                        <button class="nav-link" data-mode="routes" type="button"><i class="bi bi-signpost-2"></i> Routes</button>
                        <button class="nav-link" data-mode="construction" type="button"><i class="bi bi-cone-striped"></i> Construction</button>
                        <button class="nav-link" data-mode="evidence" type="button"><i class="bi bi-camera"></i> Evidence</button>
                    </div>

                    <div class="mode-panel" data-panel="traffic">
                        <h6 class="text-muted">Traffic Layers</h6>
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" id="trafficToggle" checked>
                            <label class="form-check-label" for="trafficToggle">Live traffic overlay</label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="alertsToggle" checked>
                            <label class="form-check-label" for="alertsToggle">Incidents & alerts</label>
                        </div>
                        <button class="btn btn-outline-primary btn-sm" id="fitTrafficBtn"><i class="bi bi-broadcast"></i> Fit to traffic</button>
                    </div>

                    <div class="mode-panel d-none" data-panel="routes">
                        <h6 class="text-muted">Route Planning</h6>
                        <p class="small text-muted">Draw a line to define origin-destination. Double-click to finish.</p>
                        <div class="d-flex gap-2 mb-3">
                            <button class="btn btn-primary btn-sm" id="startRouteDraw"><i class="bi bi-pencil"></i> Draw Route</button>
                            <button class="btn btn-outline-secondary btn-sm" id="clearRoutes"><i class="bi bi-eraser"></i> Clear</button>
                        </div>
                        <div class="alert alert-light p-2" id="routeStats" role="alert">
                            <div class="small text-muted">Length: <span id="routeLength">0.0 km</span></div>
                            <div class="small text-muted">Est. Time (30 km/h): <span id="routeEta">0 min</span></div>
                        </div>
                        
                        <!-- Alternative Routes Section -->
                        <div class="mt-3">
                            <h6 class="text-muted mb-2"><i class="bi bi-signpost-split"></i> Alternative Routes</h6>
                            <div id="alternativesHost">
                                <div class="alert alert-info p-2 small mb-0">
                                    <i class="bi bi-info-circle"></i> Draw a route to see alternatives
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mode-panel d-none" data-panel="construction">
                        <h6 class="text-muted">Construction Impact</h6>
                        <p class="small text-muted">Draw a polygon to define work zone.</p>
                        <div class="d-flex gap-2 mb-3">
                            <button class="btn btn-warning btn-sm" id="startConstructionDraw"><i class="bi bi-pentagon"></i> Draw Zone</button>
                            <button class="btn btn-outline-secondary btn-sm" id="clearConstruction"><i class="bi bi-eraser"></i> Clear</button>
                        </div>
                        <div class="alert alert-warning p-2" id="constructionStats" role="alert">
                            <div class="small">Area: <span id="zoneArea">0.0</span> kmÂ²</div>
                            <div class="small">Vertices: <span id="zoneVertices">0</span></div>
                        </div>
                        <button class="btn btn-primary btn-sm w-100" id="analyzeImpact"><i class="bi bi-diagram-3"></i> Analyze Diversions</button>
                        
                        <!-- Impact Results Section -->
                        <div class="mt-3" id="impactResultsSection" style="display:none;">
                            <h6 class="text-muted mb-2"><i class="bi bi-exclamation-triangle"></i> Impact Analysis</h6>
                            <div id="impactResults">
                                <!-- Results will be populated by operations.js -->
                            </div>
                        </div>
                    </div>

                    <div class="mode-panel d-none" data-panel="evidence">
                        <h6 class="text-muted">Evidence Viewer</h6>
                        <p class="small text-muted">Open the evidence carousel for selected hot spots.</p>
                        <a class="btn btn-outline-primary btn-sm" href="/Home/EvidenceViewer"><i class="bi bi-camera"></i> Open Evidence Viewer</a>
                        <div class="mt-3 small text-muted">Tip: click on a red zone marker to jump into the viewer.</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div id="mapContainer" style="height:75vh; min-height:480px; position: relative;">
                        <div id="operationsMap" style="height:100%;"></div>
                        <div class="position-absolute top-0 end-0 m-3 d-flex flex-column gap-2">
                            <div class="badge bg-dark text-white" id="mapStatusBadge">Loading map...</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://api.mapbox.com/mapbox-gl-js/v3.0.0/mapbox-gl.js"></script>
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-draw/v1.5.0/mapbox-gl-draw.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@turf/turf@6.5.0/turf.min.js"></script>
    <script>
        window.MAPBOX_ACCESS_TOKEN = '@mapToken';
        window.BACKEND_API_URL = '@backendUrl';
    </script>
    <script src="~/js/trafficOverlay.js" asp-append-version="true"></script>
    <script src="~/js/operations.js" asp-append-version="true"></script>
}
