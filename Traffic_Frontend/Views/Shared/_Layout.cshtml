<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NavDrishti Traffic Management</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    @{ 
        var ctrl = (ViewContext?.RouteData?.Values?["controller"] as string) ?? string.Empty;
        var act = (ViewContext?.RouteData?.Values?["action"] as string) ?? string.Empty;
        var isHomePage = string.Equals(ctrl, "Home", StringComparison.OrdinalIgnoreCase) && string.Equals(act, "Index", StringComparison.OrdinalIgnoreCase);
        var showNavbar = !isHomePage;
    }
    
    @if (showNavbar)
    {
        @await Html.PartialAsync("_Navbar")
    }

    <main role="main">
        @RenderBody()
    </main>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
