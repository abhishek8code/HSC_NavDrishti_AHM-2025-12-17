@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    
    bool IsActive(string controller, string action = "") 
    {
        if (string.IsNullOrEmpty(action))
            return currentController.Equals(controller, StringComparison.OrdinalIgnoreCase);
        return currentController.Equals(controller, StringComparison.OrdinalIgnoreCase) 
            && currentAction.Equals(action, StringComparison.OrdinalIgnoreCase);
    }
}

<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container-fluid">
        <!-- Brand -->
        <a class="navbar-brand d-flex align-items-center" href="/">
            <i class="bi bi-eye-fill me-2"></i>
            <span class="fw-bold">NavDrishti</span>
        </a>

        <!-- Mobile Toggle -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navigation Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(IsActive("Home", "Index") ? "active" : "")" href="/">
                        <i class="bi bi-house-door"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(IsActive("Operations", "Index") ? "active" : "")" href="/Operations">
                        <i class="bi bi-map"></i> Operations
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(IsActive("Home", "Dashboard") ? "active" : "")" href="/Home/Dashboard">
                        <i class="bi bi-graph-up-arrow"></i> Analytics
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(IsActive("Projects", "Index") ? "active" : "")" href="/Projects">
                        <i class="bi bi-folder"></i> Projects
                    </a>
                </li>
            </ul>

            <!-- Right Side: System Status & User -->
            <div class="d-flex align-items-center gap-3">
                <!-- System Status -->
                @await Html.PartialAsync("_SystemStatus")

                <!-- User Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" 
                            id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#settings">
                            <i class="bi bi-gear"></i> Settings
                        </a></li>
                        <li><a class="dropdown-item" href="#help">
                            <i class="bi bi-question-circle"></i> Help
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>

<style>
    .navbar {
        padding: 0.75rem 1rem;
    }

    .navbar-brand {
        font-size: 1.25rem;
        transition: opacity 0.2s;
    }

    .navbar-brand:hover {
        opacity: 0.9;
    }

    .nav-link {
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        transition: background-color 0.2s;
    }

    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        font-weight: 500;
    }

    .dropdown-item.active {
        background-color: #0d6efd;
        color: white;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
    }

    .dropdown-item i {
        width: 20px;
        text-align: center;
        margin-right: 0.5rem;
    }

    /* Mobile adjustments */
    @@media (max-width: 991.98px) {
        .navbar-nav {
            padding-top: 1rem;
        }

        .nav-link {
            margin: 0.25rem 0;
        }

        .d-flex.gap-3 {
            flex-direction: column;
            align-items: flex-start !important;
            gap: 1rem !important;
            margin-top: 1rem;
            width: 100%;
        }
    }
</style>
